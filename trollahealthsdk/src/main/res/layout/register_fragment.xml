<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="registerViewModel"
            type="com.trolla.healthsdk.feature_auth.presentation.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            android:id="@+id/commonHeader"
            layout="@layout/layout_common_header"
            app:title="@{registerViewModel.headerTitle}" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/margin16dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/card"
            app:layout_constraintTop_toBottomOf="@+id/commonHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:hint="@string/enter_firstname"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:error="@{registerViewModel.firstnameValidator.error}"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/textHintColor"
                    app:layout_constraintTop_toBottomOf="@+id/constraintHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFirstname"
                        style="@style/trolla_fontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:text="@={registerViewModel.firstNameLiveData}"
                        android:textColor="@color/textColor1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:hint="@string/enter_lastname"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:error="@{registerViewModel.lastnameValidator.error}"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/textHintColor"
                    app:layout_constraintTop_toBottomOf="@+id/constraintHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtLastname"
                        style="@style/trolla_fontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="text"
                        android:text="@={registerViewModel.lastnameLiveData}"
                        android:textColor="@color/textColor1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:hint="Enter Mobile Number"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@color/borderColor"
                    app:boxStrokeWidth="1dp"
                    app:error="@{registerViewModel.mobileNumberValidator.error}"
                    app:errorEnabled="true"
                    app:hintTextColor="@color/textHintColor"
                    app:layout_constraintTop_toBottomOf="@+id/constraintHeader">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMobileNumber"
                        style="@style/trolla_fontMedium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:text="@={registerViewModel.mobileNumberLiveData}"
                        android:textColor="@color/textColor1" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/trolla_fontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/textColor1" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioMale"
                        style="@style/trolla_fontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{registerViewModel.genderLiveData.equalsIgnoreCase(registerViewModel.genderMaleConstant)}"
                        android:padding="10dp"
                        android:text="Male"
                        android:textColor="@color/textColor1" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        style="@style/trolla_fontMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@{registerViewModel.genderLiveData.equalsIgnoreCase(registerViewModel.genderFemaleConstant)}"
                        android:padding="10dp"
                        android:text="Female"
                        android:textColor="@color/textColor1" />

                </RadioGroup>

                <TextView
                    style="@style/trolla_fontMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin16dp"
                    android:text="Date of Birth"
                    android:textColor="@color/textColor1" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin16dp"
                    android:background="@drawable/bg_rounded_corners_grey"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner" />

            </LinearLayout>

        </ScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="@dimen/margin16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateProfile"
                style="@style/trolla_fontSemibold"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin48dp"
                android:background="@drawable/bg_inactivebutton"
                android:enabled="@{registerViewModel.registerFormValidMediator}"
                android:gravity="center"
                android:text="@string/proceed"
                android:textColor="@{registerViewModel.registerFormValidMediator ? @color/white : @color/inactiveTextColor}" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>