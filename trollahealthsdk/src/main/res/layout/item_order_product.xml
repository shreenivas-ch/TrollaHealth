<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="com.trolla.healthsdk.feature_cart.data.GetCartDetailsResponse.CartProduct" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin4dp"
        android:layout_marginEnd="@dimen/margin4dp"
        android:layout_marginBottom="@dimen/margin8dp"
        app:cardCornerRadius="@dimen/margin8dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{(v)-> item.onListItemViewClickListener.onClick(v,item.adapterPosition)}"
            android:padding="@dimen/_7sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgProductImage"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:isShowPlaceHolder="@{true}"
                app:loadImage="@{item.product.product_img[0]}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin8dp"
                android:layout_toRightOf="@+id/imgProductImage"
                android:orientation="vertical">

                <TextView
                    style="@style/trolla_fontSemibold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/imgDelete"
                    android:maxLines="2"
                    android:paddingStart="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:text="@{item.product.title}"
                    android:textColor="@color/textColor1"
                    tools:text="Dark Chocolate and Cranberry Muesli" />

                <TextView
                    style="@style/trolla_fontMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    app:setProductSecondLine="@{item.product}"
                    android:textColor="@color/textColor4"
                    tools:text="Yoga Bar | 400 g" />

                <TextView
                    style="@style/trolla_fontMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_2sdp"
                    android:textColor="@color/textColor5"
                    app:setMrp="@{item.product}"
                    tools:text="₹325.00" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/trolla_fontSemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textColor="@color/textColor1"
                        android:textSize="20sp"
                        app:setSellingPrice="@{item.product}"
                        tools:text="₹292.00" />

                    <TextView
                        style="@style/trolla_fontSemibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_2sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:text="@{`Qty `+item.qty}"
                        android:textColor="@color/textColor1"
                        tools:text="₹292.00" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            style="@style/trolla_fontBold"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin4dp"
            android:background="@drawable/ic_offer_tag"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textColor="@color/textColor1"
            android:textSize="10sp"
            app:setOfferText="@{item.product}"
            tools:text="20% OFF" />


    </androidx.cardview.widget.CardView>
</layout>