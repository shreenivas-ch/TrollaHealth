<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="loginEmailViewModel"
            type="com.trolla.healthsdk.feature_auth.presentation.LoginEmailViewModel" />

    </data>

    <LinearLayout
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_marginEnd="@dimen/margin16dp"
            android:layout_marginStart="@dimen/margin16dp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/margin24dp"
            android:textColor="@color/textColor1"
            style="@style/trolla_fontMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/featured_brands" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFeaturedBrands"
            tools:itemCount="10"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_dashboard_featured_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
</layout>