<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin16dp">

    <TextView
        android:id="@+id/txtTitle"
        style="@style/trolla_fontH2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin7dp"
        android:gravity="center"
        android:paddingStart="@dimen/margin7dp"
        android:paddingEnd="@dimen/margin7dp"
        android:text="@string/medicines_at_your_doorstep" />

    <TextView
        android:id="@+id/txtSubtitle"
        style="@style/trolla_fontP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/margin7dp"
        android:gravity="center"
        android:paddingStart="@dimen/margin7dp"
        android:paddingEnd="@dimen/margin7dp"
        android:text="@string/medicines_at_your_doorstep" />

</LinearLayout>