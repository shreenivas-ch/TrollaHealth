<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.trolla.healthsdk.feature_dashboard.data.DashboardResponse.DashboardProduct" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/_112sdp"
        android:layout_marginStart="@dimen/margin16dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_96sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                app:isShowPlaceHolder="@{true}"
                app:loadImage="@{item.product_img[0]}" />

            <TextView
                style="@style/trolla_fontSemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:paddingStart="@dimen/_2sdp"
                android:paddingEnd="@dimen/_2sdp"
                app:setOfferText="@{item}"
                android:textColor="@color/textColor1"
                tools:text="BEARDO BEARD HR/OIL GROWTH 50ML" />

        </LinearLayout>

        <TextView
            style="@style/trolla_fontBold"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_offer_yellow"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            tools:text="20% OFF"
            android:text="@{item.offer_name}"
            android:textColor="@color/textColor1"
            android:textSize="10sp" />

    </RelativeLayout>
</layout>