<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcommerceAggregatorHealthCare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="trolla_fontH1">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#1a1a1a</item>
    </style>

    <style name="trolla_fontH2">
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1a1a1a</item>
    </style>

    <style name="trolla_fontP1">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>

    <style name="trolla_fontP2">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4d4d4d</item>
    </style>

    <style name="trolla_fontSemibold">
        <item name="android:fontFamily">@font/font_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="trolla_fontMedium">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="trolla_fontBold">
